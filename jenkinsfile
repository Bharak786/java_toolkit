pipeline {

    parameters {
        choice(
            name: 'NODE_VERSION',
            choices: ['10', '12', '14', '17'],
            description: 'Select the version of Node.js to use.'
        )
    }
    
    agent {
        ubuntu {
            image 'ubuntu:20.04'
            args '-u root'
        }
    }
    
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/') {
                sh 'build --build-arg NODE_VERSION=${NODE_VERSION} -t syed:node-${NODE_VERSION} .'
                
                }
              }
            }
         }
     }
  }
