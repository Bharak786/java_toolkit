pipeline {
    agent any
    
    parameters {
        choice(
            name: 'NODE_VERSION',
            choices: ['10', '12', '14', '17'],
            description: 'Select the version of Node.js to use.'
        )
    }
 
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    dir('/var/lib/jenkins/workspace/') {
                       sh "docker build --build-arg NODE_VERSION=${NODE_VERSION} -t syed:node-${NODE_VERSION} ."
                }
              }
            }
         }
     }
  }
