pipeline {

    parameters {
        choice(
            name: 'NODE_VERSION',
            choices: ['10', '12', '14', '17'],
            description: 'Select the version of Node.js to use.'
        )
    }
    agent {
        docker {
            image 'docker:20.10.11'
            args '-u root'
        }
    }
    stages {
        stage('Build Docker Image') {
            steps {
                sh 'build --build-arg NODE_VERSION=${NODE_VERSION} -t syed:node-${NODE_VERSION} .'
            }
        }
    }
}
